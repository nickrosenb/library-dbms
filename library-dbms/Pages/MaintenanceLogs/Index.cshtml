@page
@model library_dbms.Pages.MaintenanceLogs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Asset ID: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaintenanceLog[0].Asset)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaintenanceLog[0].DatePerformed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaintenanceLog[0].HoursLogged)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaintenanceLog[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MaintenanceLog) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Asset.AssetId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePerformed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoursLogged)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.LogId">Edit</a> <br />
                <a asp-page="./Details" asp-route-id="@item.LogId">Details</a> <br />
                <a asp-page="./Delete" asp-route-id="@item.LogId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
